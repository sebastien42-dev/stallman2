{% extends 'base.html.twig' %}

{% block title %}Package index{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2 class="text-center m-3"><span class="badge badge-{{ color }} font-weight-bold text-white">Listes des forfaits</span></h2>

    <a style="text-decoration:none;" title="ajouter un forfait" href="{{ path('package_new') }}" class="btn-circle btn-{{ color }} mb-3 mt-3"><i class="fas fa-plus-square text-white"></i></a>

    <table class="table table-bordered table-hover shadow display">
        <thead class="text-center table-sm thead-dark">
            <tr>
                <th>Libelle forfait</th>
                <th>Montant HT unitaire</th>
                <th width="10%">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for package in packages %}
            <tr>
                <td class="text-center" title="{{ package.id }}">{{ package.packageName }}</td>
                <td class="text-center">{{ package.value }}</td>
                <td>
                    <div class="row">
                            <a style="text-decoration:none;" title="Voir la fiche forfait" href="{{ path('package_show', {'id': package.id}) }}" class="btn-circle btn-info btn-sm ml-4"><i class="fas fa-eye text-white"></i></a>
                            <a title="modifier" href="{{ path('package_edit', {'id': package.id}) }}" class="btn-circle btn-info btn-sm mr-2 ml-2"><i class="fas fa-edit text-white"></i></a>
                            {{ include('package/_delete_form_icone.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de forfait enregistr√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    {% include "shared/shared_datatable/_datatable_main.html.twig" %}
{% endblock %}