<form method="post" action="{{ path('package_delete', {'id': package.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce forfait ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ package.id) }}">
    <button class="btn-circle btn-danger btn-sm" title="supprimer le forfait"><i class="fas fa-trash-alt text-white"></i></button>
</form>
