{% extends 'base.html.twig' %}

{% block title %}Modifier forfait{% endblock %}

{% block body %}
<div class="container">
    <h2 class="text-center m-3"><span class="font-weight-bold text-white badge badge-{{ color }}">Modifier le forfait {{ package.packageName }}</span></h2>

    <div class="card bg-gradient-{{ color }} m-3 p-4">
        {{ include('package/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
    </div>
    <a title="retour à la liste" style="text-decoration:none;" href="{{ path('package_index') }}" class=" mt-3 btn-circle btn-secondary"><i class="fas fa-undo text-white"></i></a>
</div>
{% endblock %}
