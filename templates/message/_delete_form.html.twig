<form method="post" action="{{ path('message_delete', {'id': message.id}) }}" onsubmit="return confirm('Voulez vous supprimer le message {{ message.titre}} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
    <button class="btn btn-danger btn-sm mr-1">Supprimer</button>
</form>
