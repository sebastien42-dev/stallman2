<form method="post" action="{{ path('note_delete', {'id': note.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ note.id) }}">
    <button class="btn-circle btn-danger btn-sm" title="supprimer la note"><i class="fas fa-trash-alt text-white"></i></button>
</form>
