{% extends 'base.html.twig' %}

{% block title %}identification{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center card bg-primary shadow-lg m-5 p-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center font-weight-bold text-white">Veuillez vous identifier !</h1>
            <label for="inputEmail"><span class="text-white"><i>Email</i></span></label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <br>
            <label for="inputPassword"><span class="text-white"><i>Mot de passe</i></span></label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <br>
            <div class="text-center">
                <button class="btn btn-lg btn-success text-center" type="submit">
                    S'authentifier
                </button>
            </div>

        </form>
    </div>
</div>



{% endblock %}
