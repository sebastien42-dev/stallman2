<div class="row mt-5">

	<div class="col-lg-6 col-sm-12 mb-2">
		<div class="card border-{{ color }} shadow-lg">
			<div
				class="card-header text-uppercase text-left bg-{{ color }} text-white font-weight-bold">
				{# TODO mettre le mois en injection en lettre par le controller #}
				<span>liste des montants facturables depuis Janvier
					{{'now'|date('Y') }}</span>
			</div>
			<div class="card-body">
				<canvas id="MontantFactureChart" width="400" height="200"></canvas>
			</div>
		</div>
	</div>


	<div class="col-lg-6 col-sm-12">


		<div class="card border-{{ color }} shadow-lg">
			<div class="card-header text-uppercase text-left bg-{{ color }} text-white font-weight-bold">
				<span>Prochain cours</span>
			</div>
			<div class="card-body p-1">
				<table class="table table-borderless table-striped">
					{% for event in events %}
						{% if event.start | date('Y-m-d') == 'now' | date('Y-m-d') %}
							<tr>
								<td>{{ event.start | date('H') }}h à
									{{event.end | date('H') }}h</td>
								<td>{{ event.matieres.libelleMatiere }}</td>
								<td>Salle :
									{{ event.salles ? event.salles.libelleSalle : '' }}</td>
								<td>Classe :
									{{ event.Classes ? event.classes.libelleClasse : '' }}</td>
							</tr>
						{% endif %}
					{% endfor %}
				</table>
			</div>
		</div>
	</div>


</div>

<div class="row mt-2">

	<div class="col-lg-6 col-sm-12 mb-2">
		<div class="card border-{{ color }} shadow-lg">
			<div class="card-header text-uppercase text-left bg-{{ color }} text-white font-weight-bold">
				<span>Total non payé au
					{{'now'|date('d/m/Y')}}</span>
			</div>
			<div class="card-body">
				<ul class="nav nav-tabs" id="myTab" role="tablist">
					<li class="nav-item" role="presentation">
						<a class="nav-link active" id="global-tab" data-toggle="tab" href="#global" role="tab" aria-controls="global" aria-selected="true">Total</a>
					</li>
					<li class="nav-item" role="presentation">
						<a class="nav-link" id="create-tab" data-toggle="tab" href="#create" role="tab" aria-controls="create" aria-selected="false">Créées</a>
					</li>
					<li class="nav-item" role="presentation">
						<a class="nav-link" id="wait-tab" data-toggle="tab" href="#wait" role="tab" aria-controls="wait" aria-selected="false">En attente</a>
					</li>
					<li class="nav-item" role="presentation">
						<a class="nav-link" id="validate-tab" data-toggle="tab" href="#validate" role="tab" aria-controls="validate" aria-selected="false">Validées</a>
					</li>
				</ul>
				<div class="tab-content" id="myTabContent">
					<div class="tab-pane fade show active mt-2" id="global" role="tabpanel" aria-labelledby="global-tab">
						<span class="font-weight-bold display-4">{{ totalBill }}&nbsp;€</span>
					</div>
					<div class="tab-pane fade mt-2" id="create" role="tabpanel" aria-labelledby="create-tab">
						<span class="font-weight-bold display-4">{{ totalBillCreate }}&nbsp;€</span>
					</div>
					<div class="tab-pane fade mt-2" id="wait" role="tabpanel" aria-labelledby="wait-tab">
						<span class="font-weight-bold display-4">{{ totalBillWait }}&nbsp;€</span>
					</div>
					<div class="tab-pane fade mt-2" id="validate" role="tabpanel" aria-labelledby="validate-tab">
						<span class="font-weight-bold display-4">{{ totalBillValidate }}&nbsp;€</span>
					</div>
				</div>

			</div>
		</div>
	</div>

</div>
