{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
<div class="container-fluid">
{% include "shared/shared_alert/_alert.html.twig" %}
    <h2 class="text-center m-3"><span class="badge badge-{{ color }} font-weight-bold text-white">Listes des classes</span></h2>
    <a style="text-decoration:none;" title="ajouter une classe" href="{{ path('classe_new') }}" class="btn-circle btn-{{ color }} mb-3 mt-3"><i class="fas fa-plus-square text-white"></i></a>
    <table class="table table-bordered table-hover shadow display text-center">
        <thead class="table-sm thead-dark">
            <tr>
                <th width="30%">Nom de la classe</th>
                <th >liste des matières</th>
                <th width="10%">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td title="{{ classe.id }}">{{ classe.libelleClasse }}</td>
                <td>
                    {% for matiere in classe.matieres %}
                        {{ matiere.libelleMatiere }} - 
                    {% endfor %}
                </td>
                <td>
                    <div class="row">
                        {# <a style="text-decoration:none;" title="modifier" href="{{ path('classe_show', {'id': classe.id}) }}" class="btn-circle btn-info btn-sm ml-2 mr-2"><i class="fas fa-eye text-white"></i></a> #}
                        <a style="text-decoration:none;" title="Voir la fiche" href="{{ path('classe_edit', {'id': classe.id}) }}" class="btn-circle btn-info btn-sm ml-4 mr-2"><i class="fas  fa-edit text-white"></i></a>
                        {# {{ include('classe/_delete_form_icone.html.twig') }} #}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de classe trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
    {% include "shared/shared_datatable/_datatable_main.html.twig" %}
{% endblock %}