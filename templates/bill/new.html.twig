{% endblock %}
{% block javascripts %}
<script>
$("#addLign").click(function(){
    const index = $("#bill_billLigns>div").length;
    console.log(index);
    const tmpl = $("#bill_billLigns").data("prototype").replace(/__name__/g,index);
    $("#bill_billLigns").append(tmpl);
    
})
</script>
{% endblock %}