    {{ include('bill/_form.html.twig') }}

  <a title="retour à la liste" style="text-decoration:none;" href="{{ path('bill_index') }}" class=" mt-3 btn-circle btn-secondary"><i class="fas fa-undo text-white"></i></a>
    
