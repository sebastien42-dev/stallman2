{% extends 'base.html.twig' %}

{% block title %}utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2 class="text-center m-3"><span class="badge badge-{{ color }} font-weight-bold text-white">Listes de Utilisateurs</span></h2>

    <a style="text-decoration:none;" title="ajouter un utilisateur" href="{{ path('user_new') }}" class="btn-circle btn-{{ color }} mb-3 mt-3"><i class="fas fa-user-plus text-white"></i></a>

    <table class="table table-bordered table-hover shadow text-center">
        <thead class="table-sm thead-dark">
            <tr>
                <th width="10%">N°</th>
                <th>Email</th>
                <th>Rôle</th>
                <th width="10%">actions</th>
            </tr>
        </thead>
        <tbody class="table-sm">
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="text-center">
                    <div class="row">
                        <a style="text-decoration:none;" title="Voir la fiche" href="{{ path('user_show', {'id': user.id}) }}" class="btn-circle btn-info btn-sm ml-4"><i class="fas fa-eye text-white"></i></a>
                        <a style="text-decoration:none;" title="modifier" href="{{ path('user_edit', {'id': user.id}) }}" class="btn-circle btn-info btn-sm ml-2 mr-2"><i class="fas fa-edit text-white"></i></a>
                        {{ include('user/_delete_form_icone.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"><i>Pas d'utilisateur enregistré</i></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
    </div>
{% endblock %}
